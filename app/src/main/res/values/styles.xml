<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--Text-->
    <style name="GenericTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GenericTextViewBold" parent="GenericTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <!--Dialogs-->
    <style name="AppDialogTitleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="TextViewTitle" parent="GenericTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/black</item>
        <!-- Used for the title -->
        <item name="android:windowTitleStyle">@style/AppDialogTitleTextStyle</item>
        <!-- Used for the message -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
    </style>

    <!--Progress-->
    <style name="AlertDialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowTitleStyle">@style/AlertDialog.Theme</item>
        <item name="buttonBarButtonStyle">@style/GenericButton</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--Button-->
    <style name="AppThemeButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/black</item>
    </style>

    <style name="GenericButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:theme">@style/AppThemeButton</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>